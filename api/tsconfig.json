{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": [ "es6", "es7" ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@authMiddleware/*": ["authMiddleware/*"]
    }
  },
  "exclude": [
    "node_modules",
    "setupJest.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
