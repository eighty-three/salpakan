{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "extends": [
    	"eslint:recommended", 
    	"plugin:react/recommended"
    ],
    "ignorePatterns": ["server/src/utils"],
    "rules": {
        "indent": [
          "error", 2, {
            "SwitchCase": 1,
            "ignoredNodes": ["TemplateLiteral"]
          }
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "object-curly-spacing": [
          "error",
          "always",
          {
            "arraysInObjects": false,
            "objectsInObjects": false
          }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": ["error"]
    },
    "settings": {
      "react": {
        "version": "latest"
      }
    }
}
